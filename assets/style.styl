dark-blue = hsl(240 38% 20%)
grayish-blue = hsl(240, 18%, 77%)

*
   margin 0
   padding 0

*, *:after, *:before
  box-sizing border-box

body
   font-family 'Inter', sans-serif
   font-size 23px
   background-color #fff
   color dark-blue
   line-height 1.3

.wrapper
   min-height 100vh
   background: url("./images/pattern-curve.svg")
   background-position bottom left
   background-repeat no-repeat
   background-size 75vw 22vw
   padding 2rem
   display flex
   justify-content center

.testimonial
   display flex
   flex-direction column

.image-container
   padding 2rem
   background-image url('./images/pattern-bg.svg')
   width 100%
   background-size 100% 100%
   background-position center
   max-width 604px
   position relative

.image-div
   max-width 540px
   width 100%
   position relative

.user-image
   display flex
   border-radius 8px
   width 100%
   box-shadow 0 15px 50px 0 #00000035
   transform translateX(-20px)
   opacity 0
   transition all 450ms linear

.btn-container
   position absolute
   bottom calc(-45px / 2)
   left 50%
   transform translateX(-50%)
   display flex

.btn-container .btn
   background-color #fff
   border none
   outline none
   padding 0.5rem
   width 45px
   height 45px
   display flex
   justify-content center
   align-items center
   cursor pointer

.btn-container .btn:hover
   background-color #F7F7F7

#prev
   border-radius 50% 0 0 50%
#next
   border-radius 0 50% 50% 0

.btn-container .btn img
   max-width 11px
   max-height 17px
   width 100%

.testimonial-container
   text-align center
   position relative
   margin 4rem 0
   font-weight 300
   transform translateX(-20px)
   opacity 0
   transition all 450ms linear
   max-width 640px

.testimonial-container::after
   position absolute
   content ""
   background-image url("./images/pattern-quotes.svg")
   background-size 80px
   width: 80px
   height 80px
   top -32px
   left 50%
   transform translateX(-50%)
   background-repeat no-repeat

.user-info
   margin-top 1.5rem
   font-size 18px
   display flex
   flex-direction column

.user-name
   font-weight bold

.user-position
   color grayish-blue
   font-weight 500


// Common class
.active
   opacity 1
   transform translateX(0)

//

@media (min-width 575px)
   
   .wrapper
      display flex
      justify-content center
      padding 3.75rem
   .image-div
      min-width 250px
   .testimonial
      align-items center
      flex-direction row-reverse
      margin auto 0
   .testimonial-container
      text-align left
 
   .btn-container
      left 3.2rem
      transform translateX(0)
   .user-info
      flex-direction row
      gap 1rem

@media (min-width 780px)
   body
      font-size 28px
      line-height 1.5
   .wrapper
      background-size 50vw 10vw
   .image-container
      padding 3.5rem
      left -4.2rem
   .wrapper
      padding 5rem
   .testimonial-container
      left 4.2rem
   .testimonial-container::after
      left 15%
      transform translateX(0)

@media (min-width 780px) and (max-width 1024px)
   .image-container
      left 2.7rem
   .image-div
      min-width 380px
   .testimonial-container
      left 2.7rem

@media (min-width 1030px)
   body
      font-size 32px